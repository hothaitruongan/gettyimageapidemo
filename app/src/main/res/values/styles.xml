<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textViewStyle">@style/DefaultTextBoxTheme</item>
        <item name="editTextStyle">@style/DefaultEditTextTheme</item>
    </style>
    <style name="DefaultTextBoxTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="DefaultEditTextTheme" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
